{%extends 'products/itemBase.html.twig'%}
{% block list %}
<h2> Listado de Productos </h2>
<div class="row row-cols-1 row-cols-md-2">
  {% for item in itemList %}
  <div class="col mb-4">
    <div class="card" style="width: 18rem">
      <img src="./assets/image/{{ item.image }}" class="card-img-top" alt="item image"/>
      <div class="card-body">
        <h5 class="card-title">{{ item.description }} - {{ item.scale }}</h5>
        <p class="card-text">{{ item.brand }}</p>
        <a href="{{path('showItem')}}" class="btn btn-primary">MÃ¡s Info</a>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}